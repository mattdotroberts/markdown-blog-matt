---
import type { CollectionEntry } from 'astro:content';
import TagBadge from './TagBadge.astro';

interface Props {
  project: CollectionEntry<'projects'>;
  variant?: 'default' | 'wide';
}

const { project, variant = 'default' } = Astro.props;
const { title, description, date, url, repo, tags, image } = project.data;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short'
});
---

<article class:list={['project-card', variant === 'wide' && 'project-card--wide']}>
  <a
    href={`/projects/${project.id}`}
    class="project-card__link"
    style={variant === 'wide' ? 'display: grid; grid-template-columns: 200px 1fr; gap: 1.5rem; align-items: center;' : ''}
  >
    {image && (
      <img
        src={image}
        alt={title}
        class="project-card__image"
        loading="lazy"
        style={variant === 'wide' ? 'margin-bottom: 0;' : ''}
      />
    )}
    <div class="project-card__content">
      <div class="project-card__meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
      </div>

      <h3 class="project-card__title">{title}</h3>

      <p class="project-card__description">{description}</p>

      <div class="project-card__footer">
        {tags && tags.length > 0 && (
          <div class="project-card__tags">
            {tags.map((tag) => (
              <TagBadge tag={tag} linked={false} />
            ))}
          </div>
        )}

        {(url || repo) && (
          <div class="project-card__links">
            {url && (
              <a href={url} class="project-card__ext-link" target="_blank" rel="noopener">
                Live
              </a>
            )}
            {repo && (
              <a href={repo} class="project-card__ext-link" target="_blank" rel="noopener">
                Repo
              </a>
            )}
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-md);
    transition: border-color var(--transition-fast);
  }

  .project-card:hover {
    border-color: var(--color-border-strong);
  }

  .project-card__link {
    display: block;
    color: inherit;
    flex: 1;
  }

  .project-card__link:hover {
    text-decoration: none;
  }

  .project-card__image {
    width: 100%;
    height: auto;
    border-radius: var(--border-radius-sm);
    margin-bottom: var(--space-md);
    border: 1px solid var(--color-border-subtle);
  }

  .project-card__content {
    display: flex;
    flex-direction: column;
  }

  .project-card__meta {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .project-card__title {
    font-size: var(--text-xl);
    margin-bottom: var(--space-sm);
    transition: color var(--transition-fast);
  }

  .project-card__link:hover .project-card__title {
    color: var(--color-accent-primary);
  }

  .project-card__description {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .project-card__footer {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-sm);
    margin-top: var(--space-lg);
    padding-top: var(--space-md);
    border-top: 1px solid var(--color-border-subtle);
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .project-card__links {
    display: flex;
    gap: var(--space-md);
  }

  .project-card__ext-link {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-muted);
  }

  .project-card__ext-link:hover {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  /* Wide variant - image left, content right using grid */
  .project-card--wide {
    padding: var(--space-sm);
  }

  .project-card--wide > .project-card__link {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-md);
    align-items: center;
  }

  .project-card--wide > .project-card__link > .project-card__image {
    width: 100%;
    margin-bottom: 0;
    grid-row: 1;
    grid-column: 1;
  }

  .project-card--wide > .project-card__link > .project-card__content {
    grid-row: 1;
    grid-column: 2;
  }

  .project-card--wide .project-card__meta {
    margin-bottom: 0;
  }

  .project-card--wide .project-card__title {
    font-size: var(--text-base);
    margin-bottom: 0;
  }

  .project-card--wide .project-card__description {
    font-size: var(--text-sm);
    margin-top: var(--space-xs);
  }

  .project-card--wide .project-card__footer {
    margin-top: var(--space-xs);
    padding-top: var(--space-xs);
  }

  @media (max-width: 640px) {
    .project-card--wide > .project-card__link {
      grid-template-columns: 1fr;
    }

    .project-card--wide > .project-card__link > .project-card__image {
      grid-column: 1;
    }

    .project-card--wide > .project-card__link > .project-card__content {
      grid-row: 2;
      grid-column: 1;
    }
  }
</style>
