---
import NewsletterSignup from './NewsletterSignup.astro';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container footer__inner">
    <div class="footer__newsletter">
      <p class="footer__newsletter-label">Stay updated</p>
      <NewsletterSignup variant="compact" />
    </div>

    <hr class="footer__divider-line" />

    <nav class="footer__links">
      <a href="/rss.xml" class="footer__link">RSS</a>
      <span class="footer__divider">·</span>
      <a href="https://www.linkedin.com/in/mattjroberts/" class="footer__link" target="_blank" rel="noopener">LinkedIn</a>
      <span class="footer__divider">·</span>
      <a href="https://x.com/mattdotroberts" class="footer__link" target="_blank" rel="noopener">X</a>
    </nav>

    <p class="footer__text">
      &copy; {currentYear} Matt. All rights reserved.
    </p>
  </div>
</footer>

<style>
  .footer {
    border-top: 1px solid var(--color-border);
    padding: var(--space-3xl) 0;
    margin-top: var(--space-5xl);
  }

  .footer__inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-lg);
    text-align: center;
  }

  .footer__links {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .footer__link {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
  }

  .footer__link:hover {
    color: var(--color-accent-primary);
    text-decoration: none;
  }

  .footer__divider {
    color: var(--color-border);
  }

  .footer__text {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    margin: 0;
  }

  .footer__newsletter {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .footer__newsletter-label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    margin: 0;
  }

  .footer__divider-line {
    width: 100%;
    max-width: 200px;
    border: none;
    border-top: 1px solid var(--color-border-subtle);
    margin: 0;
  }
</style>
